<!DOCTYPE html> <html lang="ko"> <head> <meta charset="UTF-8"> <meta name="viewport" content="width=device-width, initial-scale=1.0"> <title>Duplicate Text Check</title> <style> .duplicate { color: red; } </style> </head> <body> <ul> <li>Item 1</li> <li>Item 2</li> <li>Item 3</li> <li>Item 4</li> <li>Item 5</li> <li>Item 2</li> <!-- Duplicate --> <li>Item 1</li> <!-- Duplicate --> </ul> <script> document.addEventListener('DOMContentLoaded', () => { const listItems = document.querySelectorAll('li'); // 모든 li 요소의 텍스트 내용을 읽어서 배열에 저장 const texts = Array.from(listItems).map(item => item.textContent.trim()); // 중복된 텍스트 찾기 const seen = new Set(); const duplicates = new Set(); texts.forEach(text => { if (seen.has(text)) { duplicates.add(text); } else { seen.add(text); } }); // 중복된 텍스트가 있을 경우 콘솔에 출력 및 요소에 스타일 적용 if (duplicates.size > 0) { console.log('중복된 텍스트가 있습니다.'); console.log('중복된 텍스트:', Array.from(duplicates)); console.log('중복된 텍스트의 수:', duplicates.size); listItems.forEach(item => { if (duplicates.has(item.textContent.trim())) { item.classList.add('duplicate'); } }); } else { console.log('중복된 텍스트가 없습니다.'); } }); </script> </body> </html>
